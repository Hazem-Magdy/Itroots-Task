@model Itroots_Task.Models.Invoice

@{
    ViewData["Title"] = "Details";
    int rowCounter = 0;
}

<h1>Details</h1>

<div>
    <h4>Invoice</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Items)
        </dt>
        <dd class="col-sm-10">
            <table calss="table table-striped table-bordered style=" overflow-x:scroll"">
                <thead>
                    <tr style="text-align:center">
                        <th>#NO</th>
                        <th>Price</th>
                        <th>Quantity</th>
                        <th>Product</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (InvoiceItem item in Model.Items)
                    {
                        <tr style="text-align:center">
                            <td>@(rowCounter = rowCounter +1)</td>
                            <td>@item.Price</td>
                            <td>@item.Quantity</td>
                            <td>@item.Product</td>
                        </tr>
                    }
                </tbody>

            </table>
        </dd>
    </dl>
</div>
<div>
   <a class="btn btn-success" asp-action="Index">Back to List</a>
</div>
