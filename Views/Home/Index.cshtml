@{
    ViewData["title"] = "List Of Users";
}
@model IEnumerable<User>

@using (Html.BeginForm("Index", "Home", FormMethod.Get))
{
    <div class="row">
        <div class="col-md-10 mx-auto">
            <div class="input-group mb-3">
                @Html.TextBox("searchQuery", ViewBag.SearchQuery as string, new { @class = "form-control", placeholder = "Search for a user" })
                <button type="submit" class="btn btn-primary">Search</button>
            </div>
        </div>
    </div>
}

<div class="row">
    <div class="col-md-8 mx-auto">
        <table class="table table-responsive" style="overflow-x:scroll">
            <thead>
                <tr style="text-align:center">
                    <th class="align-middle">@Html.DisplayNameFor(user=>user.FullName)</th>
                    <th class="align-middle">@Html.DisplayNameFor(user=>user.Email)</th>
                    <th class="align-middle">@Html.DisplayNameFor(user=>user.Role)</th>
                    <th class="align-middle">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td class="align-middle">
                            @user.FullName
                        </td>
                        <td class="align-middle">
                            @user.Email
                        </td>
                        <td class="align-middle">
                            @user.Role.Name
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@user.Id">Edit</a> |
                            <a class="btn btn-info" asp-action="Details" asp-route-id="@user.Id">Details</a> |
                            <a class="btn btn-danger text-light" asp-action="Delete" asp-route-id="@user.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<div style="position:fixed;right:25px;bottom:25px" class="text-white">
    <a asp-action="Create" asp-controller="Home" class="btn btn-success"><i class="bi bi-plus-circle"></i> Add New</a>
</div>